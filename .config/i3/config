# Fullscreen screenshot
bindsym Print exec --no-startup-id maim --hidecursor | tee ~/Pictures/Screenshots/$(date "+Screenshot-%G-%m-%d_%H.%M.%S").png | xclip -selection clipboard -t image/png

# App or area screenshot
bindsym $control+Print exec --no-startup-id maim -s --hidecursor | tee ~/Pictures/Screenshots/$(date "+Screenshot-%G-%m-%d_%H.%M.%S").png | xclip -selection clipboard -t image/png

