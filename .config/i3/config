exec --no-startup-id "kitty --class kitty_scratch"
for_window [class="kitty_scratch"] move scratchpad, move position 0 30, resize set 3840 1800;
bindsym F9 [class="kitty_scratch"] scratchpad show;

bindsym $mod+Shift+F1 move container to scratchpad
bindsym $mod+F1 [class="^((?!kitty_scratch).)*$"] scratchpad show


bindsym $mod+Tab mode "Cycle scratchpad"; scratchpad show
mode "Cycle scratchpad"{     
  bindsym $mod+Tab scratchpad show; scratchpad show     
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
