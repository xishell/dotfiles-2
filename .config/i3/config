# Fullscreen screenshot
bindsym Print exec --no-startup-id maim --hidecursor | tee ~/Pictures/Screenshots/$(date "+Screenshot-%G-%m-%d_%H.%M.%S").png | xclip -selection clipboard -t image/png

# App or area screenshot
bindsym $control+Print exec --no-startup-id maim -s --hidecursor | tee ~/Pictures/Screenshots/$(date "+Screenshot-%G-%m-%d_%H.%M.%S").png | xclip -selection clipboard -t image/png

# Flameshot binding
bindsym $control+$shift+Print exec --no-startup-id flameshot gui

##############################
# Scratchpad and window hiding
##############################

exec --no-startup-id "alacritty --class alacritty_scratch,alacritty_scratch"
for_window [class="alacritty_scratch"] move scratchpad, move position 0 30, resize set 3840 1800;
bindsym F9 [class="alacritty_scratch"] scratchpad show;

bindsym $mod+Shift+F1 move container to scratchpad
bindsym $mod+F1 [class="^((?!alacritty_scratch).)*$"] scratchpad show


bindsym $mod+Tab mode "Cycle scratchpad"; scratchpad show
mode "Cycle scratchpad"{     
  bindsym $mod+Tab scratchpad show; scratchpad show     
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
